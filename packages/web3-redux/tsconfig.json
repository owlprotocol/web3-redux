{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react-jsx",
    "sourceMap": false,
    "outDir": "lib/types",
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": false,
    "resolveJsonModule": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/types/web3",
    "./**/node_modules/ipfs-utils/**/*"
  ],
}