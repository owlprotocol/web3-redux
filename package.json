{
  "name": "@owlprotocol/web3-redux-monorepo",
  "version": "0.1.1",
  "private": true,
  "description": "Lerna workspace for multipackage setup",
  "keywords": [
    "lerna",
    "pnpm",
    "workspace"
  ],
  "license": "MIT",
  "author": "Leo Vigna",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "npm-run-all -p clean:lib clean:node_modules clean:pnpm-lock clean:package-lock",
    "clean:lib": "rimraf packages/*/lib",
    "clean:node_modules": "rimraf packages/*/node_modules",
    "clean:pnpm-lock": "rimraf packages/*/pnpm-lock.yaml",
    "clean:package-lock": "rimraf packages/*/package-lock.json",
    "setup": "npm-run-all clean bootstrap",
    "prepare": "husky install",
    "test": "npm-run-all -p test:web3-redux test:web3-redux-components",
    "test:web3-redux": "cd packages/web3-redux && npm run test",
    "test:web3-redux-components": "cd packages/web3-redux && npm run test"
  },
  "dependencies": {
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "husky": "^7.0.4",
    "rimraf": "^3.0.2"
  }
}